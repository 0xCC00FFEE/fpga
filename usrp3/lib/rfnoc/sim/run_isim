vlogcomp -work work --sourcelibext .v \
	 --sourcelibdir ../../../lib/dsp \
         --sourcelibdir ../../../lib/control \
         --sourcelibdir ../../../lib/rfnoc \
         --sourcelibdir ../../../lib/fifo \
