         --sourcelibdir ../../../lib/coregen \
	 --sourcelibdir ${XILINX}/verilog/src/unimacro \
	 --sourcelibdir ../../../top/x300/coregen \
	 ../schmidl_cox_tb.v




fuse work.schmidl_cox_tb work.glbl -L unisims_ver -L xilinxcorelib_ver -o schmidl_cox_tb.exe

# run the simulation scrip
